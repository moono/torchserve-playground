<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<!-- Console Logs -->
		<Console name="STDOUT_CUSTOM" target="SYSTEM_OUT">
			<!-- MODEL_LOG's specific filter -->
			<RegexFilter regex=".*timestamp.*" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout>
				<pattern>%enc{%m}{JSON}%n</pattern>
			</PatternLayout>
		</Console>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout>
				<!-- (filename %F) and (line %L) will only print java code ones-->
				<pattern>{"timestamp":"%d{ISO8601}Z", "level":"%p", "loggerName":"%c", "filename"":"%F", "line": %L, "func": "unknown", "message": "%enc{%m}{JSON}"}%n</pattern>
			</PatternLayout>
		</Console>

		<!-- File Logs -->
		<RollingFile name="access_log" fileName="${env:LOG_LOCATION:-logs}/access_log.log" filePattern="${env:LOG_LOCATION:-logs}/access_log.%d{dd-MMM}.log.gz">
			<PatternLayout pattern="%d{ISO8601} - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="2" />
		</RollingFile>
		<RollingFile name="model_log" fileName="${env:LOG_LOCATION:-logs}/model_log.log" filePattern="${env:LOG_LOCATION:-logs}/model_log.%d{dd-MMM}.log.gz">
			<PatternLayout pattern="%d{ISO8601} [%-5p] %t %c - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="2" />
		</RollingFile>
		<RollingFile name="model_metrics" fileName="${env:METRICS_LOCATION:-logs}/model_metrics.log" filePattern="${env:METRICS_LOCATION:-logs}/model_metrics.%d{dd-MMM}.log.gz">
			<PatternLayout pattern="%d{ISO8601} - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="2" />
		</RollingFile>
		<RollingFile name="ts_log" fileName="${env:LOG_LOCATION:-logs}/ts_log.log" filePattern="${env:LOG_LOCATION:-logs}/ts_log.%d{dd-MMM}.log.gz">
			<PatternLayout pattern="%d{ISO8601} [%-5p] %t %c - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="2" />
		</RollingFile>
		<RollingFile name="ts_metrics" fileName="${env:METRICS_LOCATION:-logs}/ts_metrics.log" filePattern="${env:METRICS_LOCATION:-logs}/ts_metrics.%d{dd-MMM}.log.gz">
			<PatternLayout pattern="%d{ISO8601} - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy max="2" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<!-- torchserve's default ones -->
		<Logger name="io.netty" level="error" />
		<Logger name="org.apache" level="off" />

		<!-- All logs from torchserve -->
		<Logger name="org.pytorch.serve" level="warn" additivity="false">
			<AppenderRef ref="ts_log" />
		</Logger>

		<!-- Access logs -->
		<Logger name="ACCESS_LOG" level="info" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="access_log" />
		</Logger>

		<!-- Model logs -->
		<Logger name="MODEL_LOG" level="all" additivity="false">
			<AppenderRef ref="STDOUT_CUSTOM" />
			<AppenderRef ref="model_log" />
		</Logger>

		<!-- Model Metric -->
		<Logger name="MODEL_METRICS" level="warn" additivity="false">
			<AppenderRef ref="model_metrics" />
		</Logger>

		<!-- TS Metric -->
		<Logger name="TS_METRICS" level="warn" additivity="false">
			<AppenderRef ref="ts_metrics" />
		</Logger>

		<Root level="info">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>